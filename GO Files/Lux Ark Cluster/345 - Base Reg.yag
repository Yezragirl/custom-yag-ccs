{{/* sdict: dict: severs list, platform: platform, max: maximum index */}}
{{define "mapsList"}}
    {{$str := ""}}
    {{$count := .count}}
    {{range $k,$v := .dict}}
        {{if and (lt $count $.max)}}
            {{$str = joinStr "\n" $str (print (index $.nums $count) " " (title $k))}}
            {{$count = add $count 1}}
